{
  "min_packer_version" : "0.8.6",
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
      "iso_checksum_type": "md5",
      "iso_checksum": "5b5e08c490ad16b59b1d9fab0def883a",
      "headless": true,
      "boot_wait": "2m",
      "communicator": "winrm",
      "winrm_username": "vagrant",
	  "winrm_password": "vagrant",
	  "winrm_timeout": "150m",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows2012_64",
      "guest_additions_mode": "attach",
      "floppy_files": [
        "./answer_files/2012_r2/Autounattend.xml",
        "./scripts/windows/oracle-cert.cer"
      ],
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--natpf1", "guest_winrm,tcp,,55985,,5985" ],
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--vram", "36" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "scripts": [
        "scripts/windows/enable-rdp.bat",
        "scripts/windows/disable-auto-logon.bat",
		"scripts/windows/puppet.bat"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/windows/powershell5.ps1"
      ],
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/windows/guest-additions.ps1"
      ],
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "valid_exit_codes": [0,1,259],
      "scripts": [
        "scripts/windows/win-updates.ps1"
      ],
      "elevated_user": "vagrant",
      "elevated_password": "vagrant"
    }
  ],


  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2012_r2_{{.Provider}}.box"
    }
  ]
}

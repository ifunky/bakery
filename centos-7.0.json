{
  "builders": [
    {
      "vm_name": "centos7.1",
      "guest_os_type": "RedHat_64",
      "iso_checksum_type": "md5",
      "iso_checksum": "111379a06402e1e445c6aeee9401d031",
      "iso_url": "http://ftp.riken.jp/Linux/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1503.iso",
      "type": "virtualbox-iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "50000s",
      "headless": "false",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "http_directory": "http",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-7.0/anaconda-ks.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/centos-7.0/vagrant.sh",
        "scripts/centos-7.0/virtualbox.sh",
        "scripts/common/ruby210.sh",
        "scripts/centos-7.0/puppet.sh",
        "scripts/centos-7.0/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "centos-7.1.box"
    }
  ]
}